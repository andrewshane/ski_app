<div class="page-header">
  <h1>
    Inputs
    <a href="/inputs/new" class="btn btn-lg btn-success">New Input</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Airport code</th>
        <th>Return</th>
        <th>Departure</th>
        <th>Actions</th>
      </tr>

      <% @inputs.each do |input| %>
      <tr>
        <td><%= input.airport_code %></td>
        <td><%= input.return %></td>
        <td><%= input.departure %></td>
        <td>
          <a href="/inputs/<%= input.id %>" class="btn btn-primary">Show</a>
          <a href="/inputs/<%= input.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_input/<%= input.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
